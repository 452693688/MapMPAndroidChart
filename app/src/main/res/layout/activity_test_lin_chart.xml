<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/chart_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/chart_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_toLeftOf="@+id/chart_value_tv"
            android:layout_toRightOf="@+id/chart_unit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/indicate_1_tv"
                style="@style/indicateTv"
                />

            <TextView
                android:id="@+id/indicate_2_tv"
                style="@style/indicateTv"
                />

            <TextView
                android:id="@+id/indicate_3_tv"
                style="@style/indicateTv"
                />

            <TextView
                android:id="@+id/indicate_4_tv"
                style="@style/indicateTv"
                />
        </LinearLayout>
    </RelativeLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
